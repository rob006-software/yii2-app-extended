{
	"name": "rob006/yii2-app-extended",
	"description": "Yii 2 Extended Project Template",
	"keywords": ["yii2", "framework", "extended", "project template"],
	"homepage": "https://github.com/rob006/yii2-app-extended",
	"type": "project",
	"license": "MIT",
	"support": {
		"issues": "https://github.com/rob006/yii2-app-extended/issues",
		"source": "https://github.com/rob006/yii2-app-extended"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=5.4.0",
		"yiisoft/yii2": "~2.0.5",
		"yiisoft/yii2-bootstrap": "~2.0.0",
		"yiisoft/yii2-composer": "~2.0.5",
		"yiisoft/yii2-swiftmailer": "~2.0.0"
	},
	"require-dev": {
		"codeception/base": "^2.2.3",
		"codeception/verify": "~0.3.1",
		"yiisoft/yii2-debug": "~2.0.0",
		"yiisoft/yii2-gii": "~2.0.0",
		"yiisoft/yii2-faker": "~2.0.0",
		"codeception/specify": "~0.4.3"
	},
	"autoload": {
		"psr-4": {
			"app\\": ""
		},
		"exclude-from-classmap": [
			"/test/"
		]
	},
	"config": {
		"process-timeout": 1800,
		"platform": {
			"php": "5.4"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"yii\\composer\\Installer::postInstall"
		],
		"post-update-cmd": [
			"yii\\composer\\Installer::postInstall"
		],
		"post-create-project-cmd": [
			"yii\\composer\\Installer::postCreateProject"
		]
	},
	"extra": {
		"yii\\composer\\Installer::postCreateProject": {
			"setPermission": [
				{
					"runtime": "0777",
					"webroot/assets": "0777",
					"yii": "0755"
				}
			]
		},
		"yii\\composer\\Installer::postInstall": {
			"copyFiles": [
				{
					"config/templates/main-local.php": "config/main-local.php",
					"config/templates/console-local.php": "config/console-local.php",
					"config/templates/web-local.php": "config/web-local.php",
					"config/templates/db-local.php": "config/db-local.php",
					"config/templates/testdb-local.php": "config/testdb-local.php",
					"config/templates/test-local.php": "config/test-local.php"
				}
			],
			"generateCookieValidationKey": [
				"config/web-local.php"
			]
		},
		"asset-vcs-driver-options": {
			"github-no-api": true
		},
		"asset-pattern-skip-version": "(-build|-patch)"
	}
}
